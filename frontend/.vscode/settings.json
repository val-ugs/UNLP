{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,

  "scss.validate": false,
  "css.validate": false,
  "less.validate": false,
  "stylelint.validate": ["scss"],
  
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit",
    "source.fixAll.eslint": "explicit"
}
}
